@model IEnumerable<MoreForYou.Services.Models.API.BenefitAPIModel>

@{
    ViewData["Title"] = "ShowMyBenefits";
    Layout = "~/Views/Shared/_More4ULayout2.cshtml";

}

<section class="section-sm">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="search-result bg-gray">
                    <h2>My Benefits</h2>
                </div>
            </div>
        </div>
        @if (Model != null && Model.Count() != 0)
        {
            <div class="row">
                <div class="col-lg-12 col-md-8">
                    <div class="category-search-filter">
                        <div class="row">
                            <div class="col-md-6">
                                <strong></strong>
                                <select>
                                    <option>Status</option>
                                    <option value="1"> Individual</option>
                                    <option value="2"> Group </option>
                                </select>
                            </div>
                        </div>
                    </div>
                    @foreach (var benefit in Model)
                    {
                        <!-- ad listing list  -->
                        <div class="ad-listing-list mt-20">
                            <div class="row p-lg-3 p-sm-5 p-4">
                                <div class="col-lg-4 align-self-center">
                                    <a href="single.html">
                                        <img src="~/images/BenefitCards/@benefit.BenefitCard" class="img-fluid" alt="">
                                    </a>
                                </div>
                                <div class="col-lg-8">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-10">
                                            <div class="ad-listing-content">
                                                <div>
                                                    <a class="font-weight-bold" value="@benefit.Id" asp-action="BenefitDetails" asp-route-id="@benefit.Id">@benefit.Name</a>
                                                </div>
                                                <ul class="list-inline mt-2 mb-3">
                                                    <li class="list-inline-item">
                                                        <i class="fa fa-cube"></i>   @benefit.BenefitType
                                                    </li>
                                                    <li class="list-inline-item"><i class="fa fa-layers-counter"></i>@benefit.benefitStatses[6].Count</li>
                                                </ul>
                                                <p class="pr-5">@benefit.Description</p>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 align-self-center">
                                            <div class="product-ratings float-lg-right pb-3">
                                                <div class="list-inline">
                                                    @benefit.LastStatus
                                                </div>
                                            </div>
                                            @if (benefit.BenefitType == "Individual")
                                            {
                                                <div class="product-ratings float-lg-right pb-3" style="margin-top:90px">
                                                    <a value="@benefit.Id" asp-action="ShowMyBenefitRequests" asp-route-BenefitId="@benefit.Id" style="text-decoration:underline; color:blue; margin-right:-45px">Details</a>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="product-ratings float-lg-right pb-3" style="margin-top:90px">
                                                    <a value="@benefit.Id" asp-action="ShowMyBenefitRequests" asp-route-BenefitId="@benefit.Id" style="text-decoration:underline; color:blue; margin-right:-45px">Details</a>
                                                </div>
                                            }

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

        }
        else
        {
        <div> You do not have any benefits yet</div>
        }
    </div>
</section>








