@model IEnumerable<MoreForYou.Services.Models.MaterModels.DepartmentModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_APPLayout.cshtml";

}

<script src="~/js/JQuery/jquery-3.5.1.js"></script>
<script src="~/DataTable/jquery-3.6.0.min.js"></script>
<link href="~/dT/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/dT/jquery.dataTables.min.js" defer></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
<h4>Departments</h4>

<div>
    <a asp-action="Create">Create New</a>
</div>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="active-member">
                        <div class="table-responsive">
                            <table class="table table-hover table-xs mb-0" id="example">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Active</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IsVisible)
                                                </td>

                                                <td>
                                                    <span>
                                                        <a asp-action="Edit" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil color-muted m-r-5"></i> </a>
                                                        <a asp-action="Delete" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash color-muted m-r-5"></i></a>
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

